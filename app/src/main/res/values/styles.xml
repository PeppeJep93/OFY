<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="MyTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:windowBackground">@drawable/arco</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/trasp</item>
        <item name="android:bottomDark">@color/trasp</item>
        <item name="android:bottomMedium">@color/trasp</item>
        <item name="android:centerBright">@color/trasp</item>
        <item name="android:centerDark">@color/trasp</item>
        <item name="android:centerMedium">@color/trasp</item>
        <item name="android:fullBright">@color/trasp</item>
        <item name="android:fullDark">@color/trasp</item>
        <item name="android:topBright">@color/trasp</item>
        <item name="android:topDark">@color/trasp</item>
    </style>

    <style name="SpinnerTheme"> <item name="android:textColor">#333333</item> <item name="android:fontFamily">@font/cl</item> <item name="android:textStyle">bold</item> <item name="android:textAlignment">center</item></style>

</resources>
